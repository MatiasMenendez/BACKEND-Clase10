html 
    head 
        link(rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        style
            include style.css
    body 
       if products.length
            h2 Products in (pug)
            table(class="table table-dark")
                thead 
                    tr 
                        th(scope="col") Name
                        th(scope="col") Price
                        th(scope="col") Image 
                        th(scope="col") ID
                tbody 
                each elem in products
                    tr 
                        th(scope="row")=elem.title
                        th(scope="row")=elem.price
                        th(scope="row")
                            img(src=elem.thumbnail class="image")
                        th(scope="row")=elem.id
       else 
            h2 No product registered
            
       a(href="/api") Back to form