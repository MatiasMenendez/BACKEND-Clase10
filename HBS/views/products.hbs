{{#if products.length}}
<h2>Products in</h2>
        <table class="table table-dark">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">ID</th>
              </tr>
            </thead>
            <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{this.title}}</th>
                <th>{{this.price}}</th>
                <th><img src="{{this.thumbnail}}" width="50px" height="50px"/></th>
                <th>{{this.id}}</th>
              </tr>
            {{/each}}
            </tbody>
        </table>
{{else}}
<h2>Products not found</h2>
{{/if}}
<a href="/">Back to the form</a>