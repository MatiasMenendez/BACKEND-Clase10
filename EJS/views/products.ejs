<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de ingreso de productos</title>
    <%- include("partials/head.ejs"); %>
</head>
<body>
    <% if (products.length) { %>
        <h2 class="title">Products in</h2>
        <table class="table table-dark">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">ID</th>
              </tr>
            </thead>
            <tbody>
            <% products.forEach(elem => {  %>
              <tr>
                <th scope="row"><%-elem.title%></th>
                <th scope="row"><%-elem.price%></th>
                <th scope="row"><img src="<%-elem.thumbnail%>" width="50px" height="50px"/></th>
                <th scope="row"><%-elem.id%></th>
              </tr>
              <% } ) %>
            </tbody>
          </table>
    <% } else { %>
            <h2>Product not found</h2>
            <% } %>
    <a href="/api/">Back to form</a>
</body>
</html>